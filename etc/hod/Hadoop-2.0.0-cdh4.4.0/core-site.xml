<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
<!--
FINAL The name of the default file system.  A URI whose scheme and authority
determine the FileSystem implementation.  The uris scheme determines the config
property (fs.SCHEME.impl) naming the FileSystem implementation class.  The uris
authority is used to determine the host, port, etc. for a filesystem
-->
<property>
    <name>fs.default.name</name>
    <!-- <value>hdfs://$hostname:8020/</value> -->
    <value>hdfs://localhost/</value>
</property>

<!-- 
FINAL Is used as the base for temporary kindoflist locally, and also in HDFS 
-->
<property>
    <name>hadoop.tmp.dir</name>
    <value></value>
</property>

<!-- 
 FINAL Default block replication. The actual number of replications can be
 specified when the file is created.  The default is used if replication is not
 specified in create time.
-->
<property>
    <name>dfs.replication</name>
    <value>1</value>
</property>

<!-- 
Larger amount of memory allocated for the in-memory filesystem used to merge
map-outputs at the reduces. 
 -->
<property>
    <name>fs.inmemory.size.mb</name>
    <value>200</value>
</property>

<!--
Size of read/write buffer used in SequenceFiles. (default 4kB)')
-->
<property>
    <name>io.file.buffer.size</name>
    <value>131072</value> <!-- 128 * 1024 -->
</property>

<!-- More streams merged at once while sorting files. (default 10)') -->
<property>
    <name>io.sort.factor</name> 
    <value>64</value>
</property>

<!--
Higher memory - limit while sorting data. (default 100)'
-->
<property>
    <name>io.sort.mb</name>
    <value>256</value>
</property>

<property>
    <name>hadoop.rpc.socket.factory.class.default</name>
    <value></value>
</property>

<!-- FINAL Force standard sockets for non-clients-->
<property>
    <name>org.apache.hadoop.net.StandardSocketFactory</name>
    <value></value>
</property>

<!--
ACL for RefreshAuthorizationPolicyProtocol, used by the dfsadmin and mradmin
commands to refresh the security policy in-effect.
-->
<property>
    <name>security.refresh.policy.protocol.acl</name>
    <value></value>
</property>



<!--  Use this SOCKS server -->
<property>
    <name>hadoop.socks.server</name>
    <value>localhost:10000</value>
</property>

<!--  Use SOCKS sockets -->
<property>
    <name>hadoop.rpc.socket.factory.class.default</name>
    <value>org.apache.hadoop.net.SocksSocketFactory</value>
</property>

</configuration>
