#!/usr/bin/env python

import sys

try:
    from mpi4py import MPI
except ImportError, e:
    print 'Error: Could not import mpi4py. Is the MPI environment module loaded?'
    print 'Undelying error is: "%s"' % e
    sys.exit(1)

from hod.subcommands import local

def main(args):
    app = local.LocalSubCommand()
    app.run(args[1:])

if __name__ == '__main__':
    sys.exit(main(sys.argv))
